	<servlet>
		<display-name>PpnResolver</display-name>
		<servlet-name>PpnResolver</servlet-name>
		<servlet-class>de.intranda.digiverso.presentation.servlets.PpnResolver</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PpnResolver</servlet-name>
		<url-pattern>/piresolver</url-pattern>
