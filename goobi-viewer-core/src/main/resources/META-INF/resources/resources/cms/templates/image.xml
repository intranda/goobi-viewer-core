<?xml version="1.0" encoding="UTF-8" ?>
<component>
	<jsfComponent>
		<library>cms/components/frontend/component</library>
		<name>image</name>
	</jsfComponent>
	<label>cms_components__media_file</label>
	<description>cms_component__image__desc</description>
	<type>image</type>
	<content>
		<item id="image">
			<className>io.goobi.viewer.model.cms.pages.content.types.CMSMediaContent</className>
			<jsfComponent>
				<library>cms/components/backend/content</library>
				<name>media</name>
			</jsfComponent>
		</item>
	</content>

	<attribute name="width">
		<value label="50 %">50</value>
		<value label="100 %" default="true">100</value>
	</attribute>
	
	<attribute name="lightbox" label="cms__component_attribute__lightbox" type="toggle">
		<value label="cms_component__lightbox_button">true</value>
	</attribute>
</component>